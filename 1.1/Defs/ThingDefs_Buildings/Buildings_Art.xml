<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--================================ Sculptures ======================================-->

  <ThingDef ParentName="SculptureBase">
    <defName>VFE_Pottery</defName>
    <label>pottery</label>
    <description>A small-size pieces of pottery with artisting engravings. Can be crafted on a crafting spot.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Buildings/Art/Pottery</texPath>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <fillPercent>0.15</fillPercent>
    <castEdgeShadows>false</castEdgeShadows>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>40</MaxHitPoints>
      <Mass>1</Mass>
      <Beauty>20</Beauty>
      <WorkToMake>10000</WorkToMake>
    </statBases>
    <comps Inherit="False">
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <descriptionMaker>ArtDescription_Pottery</descriptionMaker>
				<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
    </comps>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
	<recipeMaker>
		<researchPrerequisite>VFE_Res_Pottery</researchPrerequisite>
			<recipeUsers>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
  </ThingDef>
  
